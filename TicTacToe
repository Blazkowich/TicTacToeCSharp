using System;

class Program
{
    static void Main(string[] args)
    {
        TicTacToe game = new TicTacToe();

        BoardViewer.DisplayBoard(game.board);
        
        game.Replace(5);
        BoardViewer.DisplayBoard(game.board);

        game.Replace(1);
        BoardViewer.DisplayBoard(game.board);
    }
}

class TicTacToe
{
    public char[,] board;

    public TicTacToe()
    {
        board = new char[3, 3];
        InitialiseBoard();
    }

    public void InitialiseBoard()
    {
        for (int row = 0; row < 3; row++)
        {
            for (int col = 0; col < 3; col++)
            {
                board[row, col] = '-';
            }
        }
    }

    public void Replace(int number)
    {
        int row = (number - 1) / 3;
        int col = (number - 1) % 3;

        if (board[row, col] == '-')
        {
            board[row, col] = 'X';
        }
        else
        {
            Console.WriteLine("Invalid move.");
        }
    }
}

class BoardViewer
{
    public static void DisplayBoard(char[,] board)
    {
        for (int row = 0; row < 3; row++)
        {
            for (int col = 0; col < 3; col++)
            {
                Console.Write(board[row, col] + " ");
            }
            Console.WriteLine();
        }
        Console.WriteLine();
    }
}
